<!-- views/admin/jobDetails.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= job.title %> Details
    </title>
    <link rel="stylesheet" href="/path/to/your/css/style.css">
</head>

<body>
    <h1>
        <%= job.title %>
    </h1>
    <p><strong>Description:</strong>
        <%= job.description %>
    </p>
    <p><strong>Location:</strong>
        <%= job.location %>
    </p>
    <p><strong>Mode:</strong>
        <%= job.mode %>
    </p>
    <p><strong>Company:</strong>
        <%= job.company.companyName %>
    </p>
    <p><strong>Salary:</strong>
        <%= job.salary.min %> - <%= job.salary.max %>
    </p>
    <p><strong>Job Type:</strong>
        <%= job.jobType %>
    </p>
    <p><strong>Experience:</strong>
        <%= job.experience %>
    </p>
    <p><strong>Skills:</strong>
        <%= job.skills.join(', ') %></p>
  <p><strong>Education:</strong> <%= job.education %></p>
  <p><strong>Company Website:</strong> <%= job.companyWebsite %></p>
  <p><strong>Contact Email:</strong> <%= job.contactEmail %></p>
  <p><strong>Industry:</strong> <%= job.industry %></p>
  <p><strong>Benefits:</strong> <%= job.benefits.join(' , ') %></p>

  <a href="/admin/jobs/<%= job._id %>/edit">Edit</a>
  <a href="/admin/jobs">Back to Jobs</a>
</body>
</html>